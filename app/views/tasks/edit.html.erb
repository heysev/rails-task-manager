<h1 class="mt-5 mx-5">Update your task</h1>
<div class="container mt-5">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "Task complete" %>
  <%= f.submit %>
<% end %>
</div>
